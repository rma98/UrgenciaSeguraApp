            android:id="@+id/radioGroupOpcao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/radioEu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#264D73"
                android:text="Para mim" />

            <RadioButton
                android:id="@+id/radioOutro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para outra pessoa"
                android:textColor="#264D73"
                android:layout_marginStart="24dp" />
        </RadioGroup>

        <!-- Dados do prÃ³prio usuÃ¡rio (visÃ­vel somente se selecionado "para mim") -->
        <LinearLayout
            android:id="@+id/layoutDadosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:checked="true"
            android:visibility="gone">

            <EditText
                android:id="@+id/editNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Celular"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editIdade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Idade"
                android:inputType="number"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Dados da outra pessoa (visÃ­vel somente se selecionado "outra pessoa") -->
        <LinearLayout
            android:id="@+id/layoutOutraPessoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/inputNomeOutro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome da pessoa"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputIdadeOutro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Idade"
                android:inputType="number"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputObservacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ObservaÃ§Ã£o (opcional)"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGravidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <!-- Gravidade da urgÃªncia -->
            <TextView
                android:id="@+id/textGravidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Selecione a gravidade:"
                android:textColor="#264D73"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerGravidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputOutroTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descreva o tipo de urgÃªncia"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonMostrarAviso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ Aviso sobre envio de imagem"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFA000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/avisoCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ No momento, sÃ³ Ã© possÃ­vel enviar fotos jÃ¡ salvas na galeria do seu telefone. A funÃ§Ã£o de tirar foto pelo app estarÃ¡ disponÃ­vel em uma versÃ£o futura."
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFF8E1"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonEnviarImagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ–¼ï¸ Galeria"
                android:backgroundTint="#49A6E9"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/buttonLocalizacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ Local"
                android:backgroundTint="#49A6E9"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Linha com os botÃµes: Voltar e Enviar SolicitaÃ§Ã£o -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonVoltarHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voltar"
                android:backgroundTint="#264D73"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/buttonEnviarSolicitacao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enviar SolicitaÃ§Ã£o"
                android:backgroundTint="#264D73"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
