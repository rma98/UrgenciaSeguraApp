<!-- res/drawable/rounded_shadow_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fundo com cor suave semi-transparente para o vidro fosco -->
    <solid android:color="#D5EAF7FF" />  <!-- azul claro translúcido -->

    <!-- Cantos arredondados -->
    <corners android:radius="16dp" />

    <!-- Borda fina com azul escuro para destaque -->
    <stroke
        android:width="1dp"
        android:color="#264D73FF" />

    <!-- Espaçamento interno para dar conforto visual -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
